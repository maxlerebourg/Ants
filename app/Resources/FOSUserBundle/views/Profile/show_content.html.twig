{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <p>Name : {{ user.username }}</p>
    <p>Email : {{ user.email }}</p>
    <p>Years old : {{ user.age }}</p>
    <p>Race : {{ user.race }}</p>
    <p>Food : </p>
    <p>Family :</p>
    <ul>
    {% for ami in user.famille %}
        <li>&nbsp;&nbsp;&nbsp;<a href="{{ path('app_remove',{'id':ami.id}) }}">remove</a> : {{ ami.username }} </li>
    {% endfor %}
    </ul>
    <a class="btn btn-secondary" href="{{ path('fos_user_security_logout') }}">Log out</a>

</div>
